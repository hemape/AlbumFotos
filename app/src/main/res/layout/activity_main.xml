<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="@android:color/darker_gray"
    tools:context="com.example.hector.relativelayout.MainActivity">

    <TextView
        android:id="@+id/album1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="Album1"
        android:textAlignment="center"
        android:layout_margin="10dp"
        android:onClick="onClick"
        android:clickable="true"
        android:background="@android:color/holo_red_dark"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/album2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textAlignment="center"
        android:text="Album2"
        android:onClick="onClick"
        android:clickable="true"
        android:background="@android:color/holo_orange_light"
        android:layout_below="@+id/album1"
        android:layout_margin="10dp"

        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/album3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textAlignment="center"
        android:text="Album3"
        android:onClick="onClick"
        android:clickable="true"
        android:layout_margin="10dp"

        android:background="@android:color/white"
        android:layout_below="@+id/album2"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/album4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:textAlignment="center"
        android:text="Album4"
        android:layout_margin="10dp"
        android:onClick="onClick"
        android:clickable="true"

        android:background="@android:color/holo_blue_bright"
        android:layout_below="@+id/album3"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/separador"
        android:layout_width="10dp"
        android:layout_height="match_parent"

        android:background="@android:color/white"
        android:layout_toRightOf="@id/album1"
        android:text="" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_toEndOf="@+id/separador"
        android:layout_height="match_parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@android:color/holo_red_dark"

            android:columnCount="2"
            android:rowCount="7">


            <TextView
                android:id="@+id/textView"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:layout_row="0"
                android:background="@android:color/holo_orange_light"
                android:text="Foto1" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_column="1"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:layout_row="0"
                android:background="@android:color/holo_orange_light"
                android:text="Foto2" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:layout_row="1"
                android:background="@android:color/holo_orange_light"
                android:text="Foto3" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_column="1"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:layout_row="1"
                android:background="@android:color/holo_orange_light"
                android:text="Foto4" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:layout_row="2"
                android:background="@android:color/holo_orange_light"
                android:text="Foto5" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_column="1"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:layout_row="2"
                android:background="@android:color/holo_orange_light"
                android:text="Foto6" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_column="1"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:layout_row="3"
                android:background="@android:color/holo_orange_light"
                android:text="Foto7" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:layout_row="3"
                android:background="@android:color/holo_orange_light"
                android:text="Foto8" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:layout_row="4"
                android:background="@android:color/holo_orange_light"
                android:text="Foto9" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_column="1"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:layout_row="4"
                android:background="@android:color/holo_orange_light"
                android:text="Foto10" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:layout_row="5"
                android:background="@android:color/holo_orange_light"
                android:text="Foto11" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_column="1"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:layout_row="5"
                android:background="@android:color/holo_orange_light"
                android:text="Foto12" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_column="0"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:layout_row="6"
                android:background="@android:color/holo_orange_light"
                android:text="Foto13" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_column="1"
                android:layout_gravity="right"
                android:layout_margin="5dp"
                android:layout_row="6"
                android:background="@android:color/holo_orange_light"
                android:text="Foto14" />

        </GridLayout>
    </ScrollView>

</RelativeLayout>